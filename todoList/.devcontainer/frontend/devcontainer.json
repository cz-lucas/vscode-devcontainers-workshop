{
    "name": "Frontend",
    "service": "frontend",
    "dockerComposeFile": [
        "../../docker-compose.yaml"
    ],
    "forwardPorts": [
        5173
    ],
    "postCreateCommand": "sudo chmod -R 777 /workspace/frontend/node_modules ; cd frontend ; npm install",
    "shutdownAction": "none",
    "workspaceMount": "source=${localWorkspaceFolder},target=/workspace,type=bind",
    "workspaceFolder": "/workspace",
    "customizations": {
        "vscode": {
            "extensions": [
                "Vue.volar"
            ]
        }
    },
    "mounts": [
        "source=node_cache,target=/workspace/frontend/node_modules"
    ]
}
